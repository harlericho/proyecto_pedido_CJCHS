 <%- include("templates/header.ejs")  %> 
  <body>
     <%- include("templates/navbar.ejs")  %> 
    <div class="container">
      <div class="row justify-content-center g-2 p-5">
        <h4 class="display-4">
          <img src="/img/clientes.png" alt="icon tarea" width="80px" />
          Clientes
        </h4>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Formulario clientes</h5>
              <form
                action="javascript:void(0);"
                method="post"
                id="formularioCliente"
                onsubmit="app.guardar()"
              >
                <div class="mb-3">
                  <input type="hidden" id="id" name="id" />
                </div>
                <div class="mb-3">
                  <label for="autor" class="form-label">Dni o CI</label>
                  <input
                    type="text"
                    class="form-control"
                    id="dni"
                    name="dni"
                    autofocus
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="nombres" class="form-label">Nombres</label>
                  <input
                    type="text"
                    class="form-control"
                    id="nombres"
                    name="nombres"
                    required
                  />
                </div>

                <button type="submit" class="btn btn-primary btn-sm">
                  Crear
                </button>
                <button
                  type="button"
                  class="btn btn-secondary btn-sm"
                  onclick="app.limpiar()"
                >
                  Nuevo
                </button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Listado clientes</h5>
              <div class="table table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th scope="col">Dni o CI</th>
                      <th scope="col">Nombres</th>
                    </tr>
                  </thead>
                  <tbody id="tbody"></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/src/cliente.js"></script>
     <%- include("templates/footer.ejs")  %> 
  </body>
</html>
