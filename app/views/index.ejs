 <%- include("templates/header.ejs")  %> 
  <body>
     <%- include("templates/navbar.ejs")  %> 
    <div class="container">
      <div class="row justify-content-center g-2 p-5">
        <h4 class="display-4">
          <img src="/img/listado.png" alt="icon tarea" width="80px" />
          Pedidos
        </h4>
        <div class="col-sm-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Formulario pedidos</h5>
              <form
                action="javascript:void(0);"
                method="post"
                id="formularioPedido"
                onsubmit="app.guardar()"
              >
                <div class="mb-3">
                  <input type="hidden" id="id" name="id" />
                </div>
                <div class="mb-3">
                  <div id="selector"></div>
                </div>
                <div class="mb-3">
                  <label for="autor" class="form-label">Código</label>
                  <input
                    type="text"
                    class="form-control"
                    id="codigo"
                    name="codigo"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="fecha" class="form-label">Fecha</label>
                  <input
                    type="date"
                    class="form-control"
                    id="fecha"
                    name="fecha"
                    required
                  />
                </div>

                <button type="submit" class="btn btn-primary btn-sm">
                  Crear
                </button>
                <button
                  type="button"
                  class="btn btn-secondary btn-sm"
                  onclick="app.limpiar()"
                >
                  Nuevo
                </button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-sm-8">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Listado pedidos</h5>
              <div class="table table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th scope="col">Código</th>
                      <th scope="col">Fecha</th>
                      <th scope="col">Cliente</th>
                      <th scope="col" colspan="2">Opciones</th>
                    </tr>
                  </thead>
                  <tbody id="tbody"></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/src/code.js"></script>
     <%- include("templates/footer.ejs")  %> 
  </body>
</html>
